<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Colonnina 1.0"/>
    </ActionBar>

    <StackLayout >
        <StackLayout>
            <TextField id="username" hint="Username" secure="false"/>
        </StackLayout>

        <StackLayout >
            <TextField id="password" hint="Password" secure="true" />
        </StackLayout>

        <Button text="Log In" ontap="tap_login"/>
    </StackLayout>
</Page>
