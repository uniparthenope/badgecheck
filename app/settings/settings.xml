<Page
    navigatingTo="onNavigatingTo"
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:x="nativescript-statusbar">

    <x:StatusBar ios:barStyle="light" barColor="rgb(34, 56, 79)" />
    <ActionBar>
        <Label text="Settings"/>
    </ActionBar>

    <GridLayout >

        <Image src="~/images/logo_new.png" margin="10 10 10 10" verticalAlignment="center" horizontalAlignment="center" opacity="0.7"/>
        <StackLayout marginTop="50">
            <Label text="Tablet Identifier:" marginBottom="5" marginLeft="50"/>
            <TextField verticalAlignment="top" id="id_tab" hint="ID-Tablet" backgroundColor="white" borderWidth="1" borderColor="#00008b" height="50" width="70%"/>
        </StackLayout>


        <StackLayout verticalAlignment="bottom">
            <Button ontap="tap_save" width="70%" verticalAlignment="bottom" text="Save" marginBottom="30" color="white" backgroundColor="#22384f"/>

        </StackLayout>
    </GridLayout>
</Page>
