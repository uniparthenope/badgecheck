<Page
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Green Pass Page"/>
    </ActionBar>

    <GridLayout >

        <Image src="~/images/logo_new.png" margin="10 10 10 10" verticalAlignment="center" horizontalAlignment="center" opacity="0.7"/>
        <StackLayout width="60%" horizontalAlignment="center" verticalAlignment="center">

            <Button ontap="tap_scanGP" width="70%" verticalAlignment="bottom" text="Scan Green Pass QR" marginBottom="15" color="white" backgroundColor="#22384f"/>
            <ListPicker id="validity-listview" items="{{ validity }}" selectedIndex="0" loaded="onListPickerLoaded"/>

            <Button ontap="tap_cartaceo" width="70%" verticalAlignment="bottom" text="Certificazione Cartacea" marginBottom="15" color="white" backgroundColor="#22384f"/>

            <!--
                        <TextField id="name" hint="Nome" autocapitalizationType="none" secure="false" backgroundColor="white" marginBottom="20"/>
                        <TextField id="surname" hint="Cognome" secure="false" backgroundColor="white"/>
                        <TextField id="birth" hint="Birth Date" backgroundColor="white"/>
            -->

        </StackLayout>
        <StackLayout verticalAlignment="bottom">

        </StackLayout>
    </GridLayout>

</Page>
