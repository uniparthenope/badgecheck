<Page
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Green Pass Page"/>
    </ActionBar>

    <GridLayout >

        <Image src="~/images/logo_new.png" margin="10 10 10 10" verticalAlignment="center" horizontalAlignment="center" opacity="0.7" />

        <StackLayout width="70%" horizontalAlignment="center" verticalAlignment="center" backgroundColor="rgba(255,255,255,0.8)" height="60%">
            <Label text="Attenzione: GreenPass Mancante" fontSize="36" horizontalAlignment="center" color="red" textWrap="true" marginBottom="15" textAlignment="center"/>

            <Button ontap="tap_scanGP" width="70%" verticalAlignment="bottom" text="Scan Green Pass QR" marginBottom="45" color="white" backgroundColor="#22384f"/>
            <Button ontap="tap_altro" id="altro" width="70%" verticalAlignment="bottom" text="Altra Certificazione - Richiedi assistenza Operatore"  color="white" backgroundColor="#22384f"/>
            <StackLayout id="validity-operator" margin="0 10 10 10"  width="70%" borderColor="red" borderWidth="2" borderRadius="5" visibility="collapsed">
                <Label text="Attendere l'arrivo di un operatore!!" fontSize="16" horizontalAlignment="center" color="red"/>
                <Button ontap="tap_operatore" width="70%" verticalAlignment="bottom" text="Accesso Operatore" marginBottom="15" color="white" backgroundColor="#22384f"/>

            </StackLayout>

            <StackLayout id="validity-layout" margin="0 10 10 10"  width="70%" borderColor="black" borderWidth="2" borderRadius="5" visibility="collapsed">
                <Label text="Durata certificazione (ore):" fontSize="16" horizontalAlignment="center"/>
                <ListPicker id="validity-listview" items="{{ validity }}" selectedIndex="0" loaded="onListPickerLoaded"/>
                <Button ontap="tap_cartaceo" width="70%" verticalAlignment="bottom" text="Invia" marginBottom="15" color="white" backgroundColor="#22384f"/>

            </StackLayout>


            <!--
                        <TextField id="name" hint="Nome" autocapitalizationType="none" secure="false" backgroundColor="white" marginBottom="20"/>
                        <TextField id="surname" hint="Cognome" secure="false" backgroundColor="white"/>
                        <TextField id="birth" hint="Birth Date" backgroundColor="white"/>
            -->

        </StackLayout>
        <StackLayout verticalAlignment="bottom">

        </StackLayout>
    </GridLayout>

</Page>
